<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.mihai.chessgame.MainActivity"
android:id="@+id/frameLayout">


<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"

    />


    <RelativeLayout

        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:descendantFocusability="blocksDescendants">


        <TextView
            android:id="@+id/text3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="29sp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/newGame"
            android:layout_width="93dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@drawable/new_game"
            android:onClick="replay"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />







          <!--  <Button
                android:id="@+id/On_OFF"
                android:layout_width="119dp"
                android:layout_height="55dp"
                android:layout_below="@id/newGame"
                android:text="ON/OFF"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>-->

        <Button
            android:id="@+id/enableDiscover"
            android:layout_width="139dp"
            android:layout_height="65dp"
            android:layout_below="@id/newGame"
            android:layout_marginLeft="100dp"

            android:onClick="btn_EnableDisable_Discoverable"
            android:text="ENABLE"
            tools:layout_editor_absoluteX="0dp"

            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/discover"
            android:layout_width="139dp"
            android:layout_height="65dp"
            android:layout_below="@id/newGame"
            android:layout_toRightOf="@id/enableDiscover"
            android:onClick="btn_Discover"
            android:text="DISCOVER"
            tools:layout_editor_absoluteX="0dp"

            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/startConnexionBT"
            android:layout_width="139dp"
            android:layout_height="65dp"
            android:layout_below="@id/newGame"
            android:layout_toRightOf="@id/discover"
            android:text="START"
            tools:layout_editor_absoluteX="0dp"

            tools:layout_editor_absoluteY="0dp" />

           <!-- <Button
                android:id="@+id/buttonSend"
