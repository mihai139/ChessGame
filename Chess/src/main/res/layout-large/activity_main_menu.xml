<!--<?xml version="1.0" encoding="utf-8"?>-->

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.mihai.chessgame.RearrangeableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:outlineWidth="2dp"
    app:outlineColor="@color/cyan"
    app:selectionAlpha="0.5"
    app:selectionZoom="1.15"

    tools:context="com.mihai.chessgame.MainMenu"
    >



        <Button
            android:id="@+id/single_player"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="33dp"
            android:onClick="singlePlayer"
            android:text="ONE PLAYER"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:typeface="serif"
            android:background="@drawable/my_button"
            android:textSize="21sp" />


        <Button
            android:id="@+id/multiplayer_Btn"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="21sp"
            android:background="@drawable/my_button"
            android:layout_marginTop="33dp"
            android:layout_marginStart="33dp"
            android:onClick="startMultiplayer"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:typeface="serif"
            android:text="TWO PLAYER" />

        <Button
            android:id="@+id/rules_of_chess"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="33dp"
            android:textSize="21sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:typeface="serif"
            android:background="@drawable/my_button"

            android:onClick="rulesOfChess"
            android:text="RULES OF CHESS" />



       <!-- <Button
        android:id="@+id/two_player"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:onClick="twoPlayer"
        android:text="Bluetooth"
        android:textSize="19sp"

         android:layout_margin="250dp"
        />-->


</com.mihai.chessgame.RearrangeableLayout>



</FrameLayout>
